body
	background #3A74B5
	color #515151
	font-family: 'Montserrat', sans-serif
	font-size 16px
*, *:after, *:before
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box
	margin 0
a
	color #000
	text-decoration none
ul
	margin 0px
	padding 0px 0px 0px 15px
li
	list-style none
h1
	padding: 10px 0px 0px 0px
//Estructura
.wrapper
	flexbox()
	flex-flow: row wrap
	width: 90%
	margin: 0 auto
	background white
.wrapper > *
	padding: 10px
	flex: 1 100%
.header,.footer,.section
	flexbox()
	flex-flow: row wrap
.header
	background: white
.footer
	background rgb(207, 207, 163)
.main
	//background: deepskyblue
.aside-1
	background pink
//Comunes
.center
	text-align center
.left
	text-align left
.right
	text-align right
.relative
	position relative
	padding-right 0px !important
.sinpadding
	padding 0
.puntero
	cursor pointer
//Header
.header-izquierda
	flex 1
.header-centro
	flex 3
.header-derecha
	flex 1
#navicon
	font-size: xx-large
	margin: 10px 0px 0px 0px
	display: block
	cursor pointer
.logotipo
	width 110px
	color black
.menuprincipal
	margin: 60px 3px 0px 0px
	width: 100%
	display none
	ul
		padding 0
		li
			a
				padding 5px 0px 5px 0px
				display block
.efectomenu1
	animated()
	animatedbounceIn()
.efectomenu2
	animated()
	animatedbounceOutUp()
#entrar
	margin: 10px 5px 0px 5px
	display: inline-block
	vertical-align: middle
	border-bottom: 3px dotted white
	line-height: 20px
	color: white
#login
	background-color: white
	width: 230px
	height: 160px
	position: absolute
	border-radius: 5px
	box-shadow: -5px 5px 5px 0px rgba(0, 0, 0, 0.4)
	right: 120px
	display none
	&:before
		content: ""
		display: block
		width: 0
		height: 0
		border-left: 10px solid transparent
		border-right: 10px solid transparent
		border-bottom: 10px solid #fff
		margin: -10px 10px 0px 0px
		float: right
//Main
.main,.aside
	padding 0
#slider
	overflow: hidden
	figure
		position: relative
		width: 500%
		margin: 0
		left: 0
		text-align: left
		font-size: 0
		animation: 30s slidy infinite
		img
			width: 20%
			float: left
//Section - Noticias
.noticia
	width 100%
	padding 5px
	overflow: hidden
	box-sizing: border-box
	flexbox()
	flex-flow: row wrap
	h2
		font-size: 1em
	figure,.cont
		width 100%
	figure
		img
			width 100%
	.cont
		padding 1%

//Foter
footer
	div
		padding 10px
.footer-izquierda
	flex 1
.footer-centro
	flex 2
.footer-derecha
	flex 1

