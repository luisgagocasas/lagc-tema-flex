@media all and (max-width: 480px)
	.blog_articulo
		.recomen
			display inline-block !important
@media all and (min-width: 700px)
	.blog_articulo,.cv,.contacto
		.img_resumen
			position relative
			width 100%
			.cont
				position: absolute
				left: 0
				right: 0
				bottom: 4px
@media all and (min-width: 1024px)
	//web
	.wrapper
		width 90%
	//header
	.header-logo
		flex 2
		justify-content center
	.header-menu
		flex 4
	.menuprincipal
		width 100%
		margin 0
		height: auto
		text-align right
		ul
			position relative
			top 0
			left 0
			right 0
			li
				//border-right: 2px solid #ECECEC
				a
					margin -5px 0px 0px 0px
					transition: 0.2s
					position relative
					border-top: 5px solid transparent
					border-bottom: 0
					&:hover
						border-top: 5px solid white
						border-bottom: 0
				&:nth-child(-n+3) //Los 3 primeros
					a
						&:before
							height: 1.5em
							border-right: 1px solid #ECECEC
							content: ''
							position: absolute
							top: 10px
							right: -3px
	#navicon
		display none
	.acceder
		margin: 17px 0px 0px 0px
	.section
		padding: 10px
	.noticia
		width 25%
	.blog //Lista de articulos
		.noticia
			width 25%
			&:nth-child(1)
				width: 50%
				position relative
				.cont
					position: absolute
					left: 0
					right: 0
					padding: 15px
					bottom: 8px
					margin: 0 auto
					background-color: rgba(58, 181, 116, 0.9)
					box-sizing: border-box
					color: white
	.blog_articulo
		.conte
			padding 5px
			flexbox()
			.descrip
				flex 3
			.recomen
				flex 1
				display inline-block !important
				.noticias
					position: relative
					margin: 0px 0px 10px 0px
	//Footer
	footer
		div
			flex 1
			width auto